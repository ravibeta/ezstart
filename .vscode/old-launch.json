{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "npm start",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "BROWSER": "none"
            },
            "preLaunchTask": "npm: install",
            "postDebugTask": "Terminate All Tasks"
        }
    ]
}
